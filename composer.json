{
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "name": "ryunosuke/htmarkdown",
  "type": "command",
  "description": "pretty view markdown",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "erusev/parsedown": "dev-master"
  },
  "require-dev": {
    "php": ">=7.4",
    "phpunit/phpunit": "8.*",
    "ryunosuke/phpunit-extension": "2.*",
    "cebe/markdown": "dev-master",
    "michelf/php-markdown": "dev-lib"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\HtMarkdown\\": "src/HtMarkdown"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test"
    }
  },
  "scripts": {
    "build": [
      "@composer install",
      "@test",
      "@box",
      "@docs"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "box": [
      "@composer dump-autoload --no-dev",
      "@php bin/box.phar build -c box.json",
      "@composer dump-autoload"
    ],
    "docs": [
      "rm -rf docs",
      "mkdir docs",
      "@php htmarkdown.phar README.md > docs/index.html"
    ]
  },
  "extra": {
    "cleaner-ignore": {
      "phpunit/phpunit": [
        "phpunit.xsd"
      ],
      "erusev/parsedown": [
        "Parsedown.php"
      ]
    }
  }
}
